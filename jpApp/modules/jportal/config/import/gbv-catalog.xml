<?xml version="1.0" encoding="UTF-8"?>
<import>
    <config>
        <projectName>jportal</projectName>
        <datamodelPath>jpApp/modules/jportal/config/</datamodelPath>
        <saveToPath>application/build/import/</saveToPath>
        <createClassificationMapping>false</createClassificationMapping>
    </config>

    <mapping>
        <mcrobjects>
	        <mcrobject name="journal" datamodel="datamodel/jpjournal.xml">
                <!-- Haupttitel der Zeitschrift -->
                <map fields="021A_a, 021A_d" to="maintitle">
                    <text value="{021A_a}[ : {021A_d}]" />
                </map>

                <!-- Datum von-bis -->
                <map fields="011@_a" to="date">
                    <text value="{011@_a}" />
                    <attributes>
				        <attribute name="type" value="published_from" />
                    </attributes>
                </map>
                <map fields="011@_b" to="date">
                    <text value="{011@_b}" />
                    <attributes>
				        <attribute name="type" value="published_until" />
                    </attributes>
                </map>

                <!-- Sprache - der einfachheit halber wird immer deutsch ausgewählt -->
                <!-- theoretisch auch klassifikations mapping möglich -->
                <map to="language">
                    <attributes>
				        <attribute name="classid" value="jportal_class_00000004" />
				        <attribute name="categid" value="de" />
                    </attributes>
                </map>

                <!-- PPN -->
                <map fields="003@_0" to="identi">
				    <text value="{003@_0}" />
                    <attributes>
    				    <attribute name="type" value="ppn" />
                    </attributes>
                </map>

                <!-- ZDB -->
                <map fields="006Z_0" to="identi">
				    <text value="{006Z_0}" />
                    <attributes>
    				    <attribute name="type" value="zdb-id" />
                    </attributes>
                </map>

                <!-- Erschließungstiefe - immer vollständige Erschließung -->
                <map to="dataModelCoverage">
                    <attributes>
				        <attribute name="classid" value="jportal_class_00000067" />
				        <attribute name="categid" value="fully" />
                    </attributes>
                </map>

	        </mcrobject>
        </mcrobjects>
    </mapping>
</import>