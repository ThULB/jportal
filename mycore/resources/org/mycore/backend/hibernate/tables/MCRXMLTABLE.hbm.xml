<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.mycore.backend.hibernate.tables">
  <class name="MCRXMLTABLE" table="MCRXMLTABLE">
    <composite-id class="MCRXMLTABLEPK" name="key">
      <key-property name="id" type="string" column="MCRID" length="64" />
      <key-property name="version" type="integer" column="MCRVERSION" length="64" />
    </composite-id>
    <property name="type" type="string" column="MCRTYPE" length="64" />
    <property name="lastModified" type="timestamp" column="MODIFIED" not-null="false" />
    <property name="xml" type="org.mycore.backend.hibernate.types.MCRXMLBlobType" column="MCRXML" length="7000000" not-null="false"
      unique="false" />
    <query name="getLastChange">
      <![CDATA[
SELECT max(lastModified), count(*) from MCRXMLTABLE
      ]]>
    </query>
  </class>
</hibernate-mapping>

