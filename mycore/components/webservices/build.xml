<?xml version="1.0" encoding="UTF-8"?>

<!-- =================================================================== -->
<!-- MyCoReModule - WebService build file for use with ANT               -->
<!-- $Revision: 1.2 $ $Date: 2006-11-22 12:20:38 $                       -->
<!-- =================================================================== -->

<project name="MyCoReModule - WebService" default="usage" basedir="../..">

	<!-- =================================================================== -->
	<!-- Help on usage                                                       -->
	<!-- =================================================================== -->

	<target name="usage">
		<echo level="info">
      Please do not use any of the other targets, they are internal.
		</echo>
	</target>
	
	<!-- =================================================================== -->
	<!-- Info                                                                -->
	<!-- =================================================================== -->

	<target name="info">
		<echo>${ant.project.name} will include programs to add WebServices.</echo>
	</target>
  
	<target name="pre.jar">
		<!-- Registers the MyCoRe WSDD provider for Axis -->
		<mkdir dir="${basedir}/classes/META-INF/services" />
		<echo file="${basedir}/classes/META-INF/services/org.apache.axis.deployment.wsdd.Provider" append="false">org.mycore.services.webservices.MCRWSDDProvider</echo>
	</target>

	<!-- =================================================================== -->

</project>
