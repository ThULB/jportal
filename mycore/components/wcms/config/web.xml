<servlet id="MCRWCMSLoginServlet">
	<servlet-name>MCRWCMSLoginServlet</servlet-name>
	<servlet-class>org.mycore.frontend.wcms.MCRWCMSLoginServlet</servlet-class>
</servlet>
<servlet id="MCRWCMSChooseServlet">
	<servlet-name>MCRWCMSChooseServlet</servlet-name>
	<servlet-class>org.mycore.frontend.wcms.MCRWCMSChooseServlet</servlet-class>
</servlet>
<servlet id="MCRWCMSActionServlet">
	<servlet-name>MCRWCMSActionServlet</servlet-name>
	<servlet-class>org.mycore.frontend.wcms.MCRWCMSActionServlet</servlet-class>
</servlet>
<servlet id="MCRWCMSAdminServlet">
	<servlet-name>MCRWCMSAdminServlet</servlet-name>
	<servlet-class>org.mycore.frontend.wcms.MCRWCMSAdminServlet</servlet-class>
</servlet>
<servlet id="MCRWCMSFileUploadServlet">
	<servlet-name>MCRWCMSFileUploadServlet</servlet-name>
	<servlet-class>org.mycore.frontend.wcms.MCRWCMSFileUploadServlet</servlet-class>
</servlet>
<servlet id="MCRWCMSGetStaticHTMLServlet">
	<servlet-name>MCRWCMSGetStaticHTMLServlet</servlet-name>
