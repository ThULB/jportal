</servlet-mapping>
<servlet-mapping>
	<servlet-name>MCRWCMSChooseServlet</servlet-name>
	<url-pattern>/servlets/MCRWCMSChooseServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>MCRWCMSActionServlet</servlet-name>
	<url-pattern>/servlets/MCRWCMSActionServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>MCRWCMSAdminServlet</servlet-name>
	<url-pattern>/servlets/MCRWCMSAdminServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>MCRWCMSFileUploadServlet</servlet-name>
	<url-pattern>/servlets/MCRWCMSFileUploadServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>MCRWCMSGetStaticHTMLServlet</servlet-name>
	<url-pattern>/servlets/MCRWCMSGetStaticHTMLServlet</url-pattern>
</servlet-mapping>