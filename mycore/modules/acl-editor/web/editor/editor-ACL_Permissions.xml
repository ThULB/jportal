<?xml version="1.0" encoding="ISO_8859-1"?>
<!DOCTYPE editor>

<editor id="ACL-PermissionEditor">
    <source uri="request:servlets/MCRACLEditorServlet?mode=getACLPermissions&amp;objid={objid}&amp;acpool={acpool}" />
    <source uri="request:servlets/MCRACLEditorServlet?mode=getACLPermissions&amp;objid={objid}" />
    <source uri="request:servlets/MCRACLEditorServlet?mode=getACLPermissions&amp;acpool={acpool}" />
    <source uri="request:servlets/MCRACLEditorServlet?mode=getACLPermissions" />

    <target type="servlet" name="MCRACLEditorServlet" method="post" format="xml" />
    <!--
        <target type="debug" method="post" format="html"/>
    -->
    <cancel url="servlets/MCRACLEditorServlet?mode=cancel" />

    <components root="ACL-PermissionEditor" var="/mcr_access_set">
        <panel id="ACL-PermissionEditor" lines="on">
            <cell row="15" col="1">
                <button width="100px" url="editor-ACL_Rules.xml">
                    <label xml:lang="de">Rule Editor</label>
                </button>
            </cell>
            <cell row="20" col="1" var="mcr_access">
                <repeater min="0" max="1024">
                    <panel id="mcr.access">

                        <hidden var="@pos" />
                        <cell row="10" col="1" var="ACPOOL">
                            <textfield width="30" />
                        </cell>
                        <cell row="10" col="2" var="OBJID">
                            <textfield width="30" />
                        </cell>
                        <cell row="10" col="3" var="RID">
                            <list width="150" type="dropdown">
                                <item value="">
                                    <label xml:lang="de">(bitte auswählen)</label>
                                    <label xml:lang="en">(choose a value)</label>
                                </item>
                                <include uri="request:servlets/MCRACLEditorServlet?mode=getRuleAsItems" cacheable="false" />
                            </list>
                        </cell>

                    </panel>
                </repeater>
            </cell>

            <!-- ************************** BUTTONS ************************ -->

            <cell row="30" col="1" anchor="CENTER">
                <space width="20px" height="30px" />
                <panel id="buttons" lines="on">
                    <cell row="10" col="2">
                        <submitButton width="100px">
                            <label xml:lang="de">OK</label>
                        </submitButton>
                    </cell>
                    <cell row="10" col="1">
                        <cancelButton width="100px">
                            <label xml:lang="de">Abbrechen</label>
                        </cancelButton>
                    </cell>
                </panel>
            </cell>
        </panel>
    </components>
</editor>
