<?xml version="1.0" encoding="UTF-8"?>

<!-- =================================================================== -->
<!-- Indexing module build file for use with Apache Ant                  -->
<!-- $Revision: 1.3 $ $Date: 2006-12-11 13:45:58 $                      -->
<!-- =================================================================== -->

<project name="MyCoReModule - Indexing" default="webapps" basedir="../..">

    <property name="build.sysclasspath" value="last" />
	<import file="${basedir}/common-modules.xml" />
	<property name="module.base" value="indexing" />
	<property name="module.dir" value="${basedir}/modules/${module.base}" />
	
  <!-- =================================================================== -->
  <!-- Help on usage                                                       -->
  <!-- =================================================================== -->

  <target name="usage">
    <echo level="info">

      Available targets are:
        webapps              --> Build the complete sample web application directory

      Please do not use any of the other targets, they are internal.
    </echo>
  </target>
	
	<!-- =================================================================== -->
	<!-- Info                                                                -->
	<!-- =================================================================== -->

	<target name="info">
		<echo>${ant.project.name} will include programs to build the google sitemap.</echo>
	</target>
	
  <!-- =================================================================== -->
  <!-- Build the web application directory and copy webpages               -->
  <!-- =================================================================== -->
	
  <target name="webapps">
	<echo level="info">
			building ${ant.project.name} webapp
	</echo>
    <!-- merge the web.xml of the module to the application -->
    <available property="web.xml.present" file="${mycore.modules}/indexing/config/web.xml" />
    <antcall target="do.merge" >
      <param name="web.xml.file"   value="${mycore.modules}/indexing/config/web.xml" />
    </antcall>
  </target>
	
  <!-- =================================================================== -->
	
</project>
