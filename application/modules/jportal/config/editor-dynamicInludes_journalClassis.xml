<?xml version="1.0"?>
<root>
    <!-- input editor -->
    <includeMyChildren id="include_dynamicClassiForJournal-head">
        <!-- label -->
        <cell row="20#REPLACE_WITH_RUNNING_NUMBER#" col="1" anchor="NORTHWEST">
            <text>
                <include cacheable="false" uri="jportal_getClassLabel:getDirectely:#REPLACE_WITH_CLASSIFICATION-ID#" />
            </text>
        </cell>
        <!-- classi -->
        <cell row="20#REPLACE_WITH_RUNNING_NUMBER#" col="2" anchor="NORTHWEST" ref="include_dynamicClassiForJournal#REPLACE_WITH_RUNNING_NUMBER#" />
    </includeMyChildren>
    <includeMyChildren id="include_dynamicClassiForJournal-code">
        <panel id="include_dynamicClassiForJournal#REPLACE_WITH_RUNNING_NUMBER#">
            <hidden var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/@class" default="MCRMetaClassification" />
            <hidden var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/@parasearch" default="true" />
            <hidden var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/@textsearch" default="false" />
            <hidden var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/@notinherit" default="false" />
            <hidden var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/@heritable" default="false" />
            <cell col="1" row="1" anchor="NORTHWEST" var="metadata/contentClassis#REPLACE_WITH_RUNNING_NUMBER#/contentClassi#REPLACE_WITH_RUNNING_NUMBER#">
                <repeater min="0" max="10" anchor="NORTHWEST" ref="classisjournal_input_repeater#REPLACE_WITH_RUNNING_NUMBER#" />
            </cell>
        </panel>
        <!-- repeater -->
        <panel id="classisjournal_input_repeater#REPLACE_WITH_RUNNING_NUMBER#">
            <hidden var="@classid" default="#REPLACE_WITH_CLASSIFICATION-ID#" />
            <cell col="1" row="2" anchor=" NORTHWEST" ref="Cclassipub#REPLACE_WITH_RUNNING_NUMBER#" var="@categid" />
        </panel>
        <!-- category list -->
        <list id="Cclassipub#REPLACE_WITH_RUNNING_NUMBER#" width="300" type="dropdown">
            <item value="">
                <label xml:lang="de"></label>
            </item>
            <include uri="classification:editor:-1:children:#REPLACE_WITH_CLASSIFICATION-ID#" />
        </list>
    </includeMyChildren>
    <!-- search -->
    <includeMyChildren id="include_dynamicClassiForJournal_search">
        <cell row="2#REPLACE_WITH_RUNNING_NUMBER#" col="1" anchor="WEST" var="conditions/boolean/condition1#REPLACE_WITH_RUNNING_NUMBER#" colspan="2">
            <repeater min="1" max="10">
                <panel lines="off">
                    <cell width="230" anchor="EAST" col="1" row="1">
                        <text>
                            <include cacheable="false" uri="jportal_getClassLabel:getDirectely:#REPLACE_WITH_CLASSIFICATION-ID#" />
                        </text>
                    </cell>
                    <hidden var="@field" default="contentClassi#REPLACE_WITH_RUNNING_NUMBER#" />
                    <hidden var="@operator" default="=" />
                    <cell row="1" col="2" anchor="WEST" var="@value">
                        <list type="dropdown">
                            <item value="" i18n="editor.search.choose" />
                            <include cacheable="false" uri="classification:editor[TextCounter]:-1:children:#REPLACE_WITH_CLASSIFICATION-ID#" />
                        </list>
                    </cell>
                </panel>
            </repeater>
        </cell>
    </includeMyChildren>
</root>