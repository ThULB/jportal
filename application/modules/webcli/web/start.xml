<module-webcli>
  <head>
    <title>MyCoRe WebCLI</title>
    <link type="text/css" rel="stylesheet" href="css/webcli.css" />
    <script type="text/javascript" src="js/dojo/dojo.js" djConfig="parseOnLoad: true"></script>
    <script type="text/javascript" src="js/webcli.js"></script>
  </head>
  <body class="tundra">
    <div dojoType="dijit.layout.LayoutContainer" style="width: 100%; height: 100%; padding: 0; margin: 0; border: 0;">
      <div dojoType="dijit.layout.ContentPane" layoutAlign="top">
        <div id="toolbar" dojoType="dijit.Toolbar">
          <div dojoType="dijit.form.DropDownButton">
            <span>Command</span>
            <div dojoType="dijit.Menu" id="commandMenu"></div>
          </div>
          <span dojoType="dijit.ToolbarSeparator"></span>
          <input id="cb" dojotype="dijit.form.CheckBox" name="autoScroll" onclick="webcli.logs.toggleAutoScroll();"
            checked="checked" value="on" type="checkbox" />
          <label for="cb">AutoScroll Logs</label>
          <div dojoType="dijit.form.Button" id="toolbar.clear" iconClass="dijitEditorIcon dijitEditorIconDelete">
            Clear Logs
            <script type="dojo/method" event="onClick">webcli.logs.clear();</script>
          </div>
          <span dojoType="dijit.ToolbarSeparator"></span>
          <button dojoType="dijit.form.Button" onclick="webcli.gui.showSettings()">Settings</button>
          <div dojoType="dijit.Dialog" id="settingsDialog" title="Settings"
            execute="webcli.gui.processSettings(arguments[0]);">
            <table>
              <tr>
                <td>
                  <label for="logRefreshSetting">Log refresh rate:</label>
                </td>
                <td>
                  <div id="logRefreshSetting" name="logRefreshSetting" dojoType="dijit.form.HorizontalSlider" value="1000" minimum="100"
                    maximum="60000" intermediateChanges="true" showButtons="true" onChange="webcli.gui.handleSlider(this.id, arguments[0]);" style="width:300px;">
                    <ol dojoType="dijit.form.HorizontalRuleLabels" container="bottomDecoration"
                      style="height:1em;font-size:75%;color:gray;" id="logRefreshSetting.label">
                      <li>1 s</li>
                    </ol>
                    <ol dojoType="dijit.form.HorizontalRuleLabels" container="topDecoration"
                      style="height:1em;font-size:75%;color:gray;">
                      <li>100&#160;ms</li>
                      <li>60&#160;s</li>
                    </ol>
                  </div>
                </td>
              </tr>
              <tr>
                <td>
                  <label for="queueRefreshSetting">Command queue refresh rate:</label>
                </td>
                <td>
                  <div id="queueRefreshSetting" name="queueRefreshSetting" dojoType="dijit.form.HorizontalSlider" value="1000" minimum="100"
                    maximum="60000" intermediateChanges="true" showButtons="true" onChange="webcli.gui.handleSlider(this.id, arguments[0]);" style="width:300px;">
                    <ol dojoType="dijit.form.HorizontalRuleLabels" container="bottomDecoration"
                      style="height:1em;font-size:75%;color:gray;" id="queueRefreshSetting.label">
                      <li>1 s</li>
                    </ol>
                    <ol dojoType="dijit.form.HorizontalRuleLabels" container="topDecoration"
                      style="height:1em;font-size:75%;color:gray;">
                      <li>100&#160;ms</li>
                      <li>60&#160;s</li>
                    </ol>
                  </div>
                </td>
              </tr>
              <tr>
                <td colspan="2" align="center">
                  <button dojoType="dijit.form.Button" type="submit">OK</button>
                </td>
              </tr>
            </table>
          </div>
        </div>
        <input type="text" id="command" dojoType="dijit.form.TextBox" onKeyUp="webcli.commands.captureCommand"
          trim="true" style="width: 40em;" />
        <div dojoType="dijit.form.Button" id="command.execute" style="">
          <span>Execute</span>
          <script type="dojo/method" event="onClick">
            <![CDATA[
webcli.commands.executeCommand(dojo.byId("command").value);
            ]]>
          </script>
        </div>
      </div>
      <div id="mainTabContainer" dojoType="dijit.layout.TabContainer" layoutAlign="client">
        <div title="Logs" dojoType="dijit.layout.ContentPane" style="width:100%" class="dijitComboBox" id="logs">
          <pre style="overflow:auto;height:100%;margin:0"></pre>
        </div>
        <div title="Command Queue" dojoType="dijit.layout.ContentPane" style="width:100%" class="dijitComboBox"
          id="commandQueue">
        </div>
      </div>
    </div>
  </body>
</module-webcli>