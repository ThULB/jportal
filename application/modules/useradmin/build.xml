<?xml version="1.0" encoding="UTF-8"?>

<!-- =================================================================== -->
<!-- UserAdmin module build file for use with Apache Ant                 -->
<!-- $Revision: 1.7 $ $Date: 2007-07-16 11:17:56 $                      -->
<!-- =================================================================== -->

<project name="MyCoReModule - UserAdmin" default="webapps" basedir="../..">

    <property name="build.sysclasspath" value="last" />
    <import file="${basedir}/common-modules.xml" />
	<property name="module.base" value="useradmin" />
	<property name="module.dir" value="${basedir}/modules/${module.base}" />
	
	<!-- =================================================================== -->
	<!-- Help on usage                                                       -->
	<!-- =================================================================== -->

	<target name="usage">
		<echo level="info">

      Available targets are:
        webapps              --> Build the complete sample web application directory
        webapps.i18n         --> Build the messages_[lang].properties

      Please do not use any of the other targets, they are internal.
		</echo>
	</target>
	
	<!-- =================================================================== -->
	<!-- Info                                                                -->
	<!-- =================================================================== -->

	<target name="info">
		<echo>${ant.project.name} will include programs to use a user administration system online.</echo>
	</target>
	
	<!-- =================================================================== -->
	<!-- Build the web application directory and copy webpages               -->
	<!-- =================================================================== -->
	
	<target name="webapps">
		<echo level="info">
			building ${ant.project.name} webapp
		</echo>
		<!-- Copy files  -->
		<copy todir="${build.webapps}/">
			<fileset file="${mycore}/modules/useradmin/webapps/*.xml"/>
		</copy>
		<copy todir="${build.webapps}/WEB-INF/stylesheets">
			<fileset file="${mycore}/modules/useradmin/webapps/stylesheets/*.xml"/>
		</copy>
		<copy todir="${build.webapps}/editor">
			<fileset file="${mycore}/modules/useradmin/webapps/editor/*.xml"/>
		</copy>
		  <copy todir="${build.webapps}/WEB-INF/stylesheets">
			<fileset file="${mycore}/modules/useradmin/webapps/stylesheets/mcr_user-UserAjax.xsl"/>
		</copy>
		<copy todir="${build.webapps}/javascript/">
			<fileset file="${mycore}/modules/useradmin/webapps/javascript/*.js"/>
		</copy>
		<!-- merge the web.xml of the module to the application -->
		<available property="web.xml.present" file="${mycore.modules}/useradmin/config/web.xml" />
		<antcall target="do.merge" >
			<param name="web.xml.file"   value="${mycore.modules}/useradmin/config/web.xml" />
		</antcall>
    </target>
    	
    <target name="webapps.i18n" >
        <echo level="info">
			building ${ant.project.name} webapp.i18n
	    </echo>
    	
		<!-- merge I18N files -->
		<antcall target="properties.merge">
			<param name="module" value="${mycore}/modules/useradmin/config/messages_useradmin_de.properties"/>
			<param name="locale_param" value="de"/>
		</antcall>			
		<antcall target="properties.merge">
			<param name="module" value="${mycore}/modules/useradmin/config/messages_useradmin_en.properties"/>
			<param name="locale_param" value="en"/>
		</antcall>
	</target>
	
	<!-- =================================================================== -->
	
</project>