<?xml version="1.0" encoding="UTF-8"?>
<mcrpermissions
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="MCRPermissions.xsd"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xml="http://www.w3.org/XML/1998/namespace"
>
  <mcrpermission name="administrate-user" description="Administration rights for the user system (needed in MCRUserMgr)" ruledescription="For administrators only">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admingroup" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
  <mcrpermission name="create-user" description="Create right for user data" ruledescription="For administrators only">
   <condition format="xml">
    <boolean operator="or">
     <condition value="admingroup" operator="=" field="group"/>
    </boolean>
   </condition>
  </mcrpermission>
