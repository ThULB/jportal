<imports>

<!-- *** Headline *** -->

  <headline anchor="CENTER">
   <text>
    <label xml:lang="de">Die mit * gekennzeichneten Daten sind Pflichtfelder.<p/></label>
    <label xml:lang="en">The fields with * are required.<p/></label>
   </text>
  </headline>

  <panel id="editor-institution">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service/servdates" descendants="true" />
    <hidden var="service/servacls"  descendants="true" />
    <hidden var="service/servflags" descendants="true" />
    <hidden var="metadata/@xml:lang"    default="de" />

   <cell col="1" row="1" anchor="NORTHWEST" ref="LINameP"/>
   <cell col="2" row="1" anchor="NORTHWEST" ref="DIName"/>
   <cell col="3" row="1" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="1" anchor="NORTHWEST" ref="HIName"/>

   <cell col="1" row="2" anchor="NORTHWEST" ref="LAddress"/>
   <cell col="2" row="2" anchor="NORTHWEST" ref="DAddress"/>
   <cell col="3" row="2" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="2" anchor="NORTHWEST" ref="HAddress"/>

   <cell col="1" row="3" anchor="NORTHWEST" ref="LPhone"/>
   <cell col="2" row="3" anchor="NORTHWEST" ref="DPhone"/>
   <cell col="3" row="3" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="3" anchor="NORTHWEST" ref="HPhone"/>

   <cell col="1" row="4" anchor="NORTHWEST" ref="LURL"/>
   <cell col="2" row="4" anchor="NORTHWEST" ref="DURL"/>
   <cell col="3" row="4" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="4" anchor="NORTHWEST" ref="HURL"/>

   <cell col="1" row="5" anchor="NORTHWEST" ref="LEmail"/>
   <cell col="2" row="5" anchor="NORTHWEST" ref="DEmail"/>
   <cell col="3" row="5" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="5" anchor="NORTHWEST" ref="HEmail"/>

   <cell col="1" row="6" anchor="NORTHWEST" ref="LNote"/>
   <cell col="2" row="6" anchor="NORTHWEST" ref="DNote"/>
   <cell col="3" row="6" anchor="NORTHWEST">
    <space width="20" height="0"/>
   </cell>
   <cell col="4" row="6" anchor="NORTHWEST" ref="HNote"/>

   <cell col="1" row="8" anchor="NORTHWEST">
    <space width="0px" height="20px"/>
   </cell>

   <cell col="1" row="9"/>
   <cell col="2" row="9" anchor="WEST" ref="TwoButtons"/>

   <cell col="1" row="10" anchor="NORTHWEST">
    <space width="0px" height="20px"/>
   </cell>
  </panel>

<!-- *** NAME *** -->

  <panel id="DIName">
    <hidden var="metadata/names/@class" default="MCRMetaInstitutionName"/>
    <hidden var="metadata/names/@notinherit" default="false"/>
    <hidden var="metadata/names/@heritable" default="true"/>
    <hidden var="metadata/names/name/@inherited" default="0"/>
    <hidden var="metadata/names/name/@xml:lang" default="de"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="DINameName" />
    <cell col="2" row="1" anchor="NORTHWEST" ref="AINameName"/>
    <cell col="1" row="2" anchor="NORTHWEST" ref="DINameNick"/>
    <cell col="2" row="2" anchor="NORTHWEST" ref="AINameNick"/>
    <cell col="1" row="3" anchor="NORTHWEST" ref="DINameProp"/>
    <cell col="2" row="3" anchor="NORTHWEST" ref="AINameProp"/>
  </panel>

  <panel id="DINameName">
    <cell col="1" row="1" anchor="NORTHWEST" var="metadata/names/name/fullname" sortnr="1">
      <textfield id="ZINameName" width="48" maxlength="128">
        <condition id="CoINameName" required="true">
          <label xml:lang="de">Bitte tragen Sie den Namen ein!</label>
          <label xml:lang="en">Please enter the name!</label>
        </condition>
      </textfield>
    </cell>
  </panel>

  <panel id="DINameNick">
    <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/nickname" sortnr="1"/>
  </panel>

  <panel id="DINameProp">
    <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/property" sortnr="1"/>
  </panel>

<!-- *** Address *** -->

  <panel id="DAddress">
    <hidden var="metadata/addresses/@class" default="MCRMetaAddress"/>
    <hidden var="metadata/addresses/@notinherit" default="false"/>
    <hidden var="metadata/addresses/@heritable" default="true"/>
    <hidden var="metadata/addresses/address/@inherited" default="0"/>
    <hidden var="metadata/addresses/address/@xml:lang" default="de"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="Scountry" var="metadata/addresses/address/country" sortnr="2"/>
    <cell col="2" row="1" anchor="NORTHWEST" ref="AAddressCountry"/>
    <cell col="1" row="2" anchor="NORTHWEST" ref="Sstate" var="metadata/addresses/address/state" sortnr="2"/>
    <cell col="2" row="2" anchor="NORTHWEST" ref="AAddressState"/>
    <cell col="1" row="3" anchor="NORTHWEST" ref="TFzeile10" var="metadata/addresses/address/zipcode" sortnr="2"/>
    <cell col="2" row="3" anchor="NORTHWEST" ref="AAddressZIP"/>
    <cell col="1" row="4" anchor="NORTHWEST" ref="TFzeile128" var="metadata/addresses/address/city" sortnr="2"/>
    <cell col="2" row="4" anchor="NORTHWEST" ref="AAddressCity"/>
    <cell col="1" row="5" anchor="NORTHWEST" ref="TFzeile128" var="metadata/addresses/address/street" sortnr="2"/>
    <cell col="2" row="5" anchor="NORTHWEST" ref="AAddressStreet"/>
    <cell col="1" row="6" anchor="NORTHWEST" ref="TFzeile10" var="metadata/addresses/address/number" sortnr="2"/>
    <cell col="2" row="6" anchor="NORTHWEST" ref="AAddressNumber"/>
  </panel>

<!-- *** Phone *** -->

  <panel id="DPhone">
    <hidden var="metadata/phones/@class" default="MCRMetaLangText"/>
    <hidden var="metadata/phones/@notinherit" default="false"/>
    <hidden var="metadata/phones/@heritable" default="true"/>
    <cell col="1" row="1" anchor="NORTHWEST" var="metadata/phones/phone">
      <repeater min="1" max="5" ref="DPhoneRef" />
    </cell>
  </panel>

  <panel id="DPhoneRef">
    <hidden var="@inherited" default="0"/>
    <hidden var="@xml:lang" default="de"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="Sphone" var="@type" sortnr="3"/>
    <cell col="1" row="2" anchor="NORTHWEST" ref="TFzeile128" sortnr="3"/>
  </panel>

<!-- *** URL *** -->

  <panel id="DURL">
    <hidden var="metadata/urls/@class" default="MCRMetaLink"/>
    <hidden var="metadata/urls/@notinherit" default="false"/>
    <hidden var="metadata/urls/@heritable" default="true"/>
    <hidden var="metadata/urls/url/@inherited" default="0"/>
    <hidden var="metadata/urls/url/@xlink:type" default="locator"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@xlink:title" sortnr="4"/>
    <cell col="2" row="1" anchor="NORTHWEST" ref="AURLTitle"/>
    <cell col="1" row="2" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@xlink:href" sortnr="4"/>
    <cell col="2" row="2" anchor="NORTHWEST" ref="AURLReference"/>
  </panel>

<!-- *** eMail *** -->

  <panel id="DEmail">
    <hidden var="metadata/emails/@class" default="MCRMetaLangText"/>
    <hidden var="metadata/emails/@notinherit" default="false"/>
    <hidden var="metadata/emails/@heritable" default="true"/>
    <hidden var="metadata/emails/email/@inherited" default="0"/>
    <hidden var="metadata/emails/email/@xml:lang" default="de"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/emails/email" sortnr="5"/>
  </panel>

<!-- *** Note *** -->

  <panel id="DNote">
    <hidden var="metadata/notes/@class" default="MCRMetaLangText"/>
    <hidden var="metadata/notes/@notinherit" default="false"/>
    <hidden var="metadata/notes/@heritable" default="true"/>
    <cell col="1" row="1" anchor="NORTHWEST" var="metadata/notes/note">
      <repeater min="1" max="5" ref="DNoteRef" />
    </cell>
  </panel>

  <panel id="DNoteRef">
    <hidden var="@inherited" default="0"/>
    <cell col="1" row="1" anchor="NORTHWEST" ref="Slang" var="@xml:lang" sortnr="6" default="de"/>
    <cell col="2" row="1" anchor="NORTHWEST" ref="TFarea4096" sortnr="6" default=""/>
  </panel>

</imports>
