 </panels>

 <packs>

  <pack name="DocPortal Core Files" required="no" preselected="yes">
   <description>The core of the MyCoRe Sample Project DocPortal</description>
   <!-- flat files -->
   <file targetdir="$INSTALL_PATH" src="changelog.txt" />
   <file targetdir="$INSTALL_PATH" src="license.txt" />
   <!-- bin files UNIX -->
   <fileset targetdir="$INSTALL_PATH/build/bin" dir="build/bin" os="unix" >
    <include name="**/mycore.sh"/>
    <include name="**/hsqldb*.sh"/>
    <include name="**/jetty*.sh"/>
    <include name="**/wsclient.sh"/>
   </fileset>
   <parsable targetfile="$INSTALL_PATH/build/bin/mycore.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbadmin.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbstart.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbstop.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/jettystart.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/jettystop.sh" os="unix" />
   <parsable targetfile="$INSTALL_PATH/build/bin/wsclient.sh" os="unix" />
   <executable targetfile="$INSTALL_PATH/build/bin/mycore.sh" keep="true" stage="never" os="unix" failure="warn" />
   <executable targetfile="$INSTALL_PATH/build/bin/hsqldbadmin.sh" keep="true" stage="never" os="unix" failure="warn" />
   <executable targetfile="$INSTALL_PATH/build/bin/hsqldbstart.sh" keep="true" stage="never" os="unix" failure="warn" />
