 <guiprefs resizable="no" width="600" height="400">
  <laf name="liquid">
   <os family="unix"/>
  </laf>
  <laf name="looks">
   <os family="windows"/>
   <param name="variant" value="plasticXP"/>
  </laf>
 </guiprefs>

 <locale>
  <langpack iso3="deu"/>
  <langpack iso3="eng"/>
 </locale>

 <resources>
  <res id="InfoPanel.info_deu" src="readme-izpack-de.txt" />
  <res id="InfoPanel.info_eng" src="readme-izpack-en.txt" />
  <res id="LicencePanel.licence" src="license.txt" />
<!--
  <res id="Installer.image" src="documentations/GFX/install-logo.gif" />
-->
