   <fileset targetdir="$INSTALL_PATH/build/bin" dir="build/bin" os="windows" >
    <include name="**/mycore.cmd"/>
    <include name="**/hsqldb*.cmd"/>
    <include name="**/jetty*.cmd"/>
    <include name="**/wsclient.cmd"/>
   </fileset>
   <fileset targetdir="$INSTALL_PATH/build/bin/gnutools" dir="build/bin/gnutools" os="windows" >
    <include name="**/*"/>
   </fileset>
   <fileset targetdir="$INSTALL_PATH/build/bin/Shortcut" dir="build/bin/Shortcut" os="windows" >
    <include name="**/*"/>
   </fileset>
   <fileset targetdir="$INSTALL_PATH/build/bin" dir="dostools" os="windows" >
    <include name="**/mklink_install.cmd"/>
    <include name="**/rmlink_install.cmd"/>
   </fileset>
   <fileset targetdir="$INSTALL_PATH/webpages/images" dir="webpages/images" os="windows" >
    <include name="**/mycore-logo-start.ico"/>
    <include name="**/mycore-logo-stop.ico"/>
    <include name="**/shell32_262.ico"/>
   </fileset>
   <parsable targetfile="$INSTALL_PATH/build/bin/mycore.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbadmin.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbstart.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/hsqldbstop.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/jettystart.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/jettystop.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/wsclient.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/mklink_install.cmd" os="windows" />
   <parsable targetfile="$INSTALL_PATH/build/bin/rmlink_install.cmd" os="windows" />
   <executable targetfile="$INSTALL_PATH//build/bin/mklink_install.cmd" keep="true" stage="postinstall" os="windows" failure="warn" />
   <executable targetfile="$INSTALL_PATH/build/bin/rmlink_install.cmd" keep="true" stage="uninstall" os="windows" failure="warn" />
   <!-- config files -->
   <fileset targetdir="$INSTALL_PATH/build/config" dir="build/config" >
    <include name="**/*"/>
    <exclude name="**/mycore.properties.private*"/>
   </fileset>
   <singlefile target="$INSTALL_PATH/build/config/mycore.properties.private" src="config/mycore.properties.private.izpack" />
   <parsable targetfile="$INSTALL_PATH/build/config/mycore.properties.private" type="javaprop" />
   <!-- lib files -->
   <fileset targetdir="$INSTALL_PATH/build/lib" dir="build/lib" >
    <include name="**/*" />
   </fileset>
   <!-- stylesheets files -->
   <fileset targetdir="$INSTALL_PATH/build/stylesheets" dir="build/stylesheets" >
    <include name="**/*" />
   </fileset>
   <!-- schema files -->
   <fileset targetdir="$INSTALL_PATH/build/schema" dir="build/schema" >
    <include name="**/*" />
   </fileset>
  </pack>

  <pack name="Web Application" required="no" preselected="yes">
   <depends packname="DocPortal Core Files" />
   <description>The WEB application of the MyCoRe Sample Project DocPortal</description>
   <!-- keystore -->
   <fileset targetdir="$INSTALL_PATH/build/keystore" dir="build/keystore" >
    <include name="**/*" />
   </fileset>
   <!-- the webapps data -->
   <fileset targetdir="$INSTALL_PATH/build/webapps" dir="build/webapps" >
    <include name="**/*" />
    <exclude name="**/WEB-INF/classes/mycore.properties.private*"/>
    <exclude name="**/WEB-INF/classes/mycore.properties.wcms*"/>
    <exclude name="**/WEB-INF/server-config.wsdd*"/>
   </fileset>
   <singlefile target="$INSTALL_PATH/build/webapps/WEB-INF/classes/mycore.properties.private" src="config/mycore.properties.private.izpack" />
   <parsable targetfile="$INSTALL_PATH/build/webapps/WEB-INF/classes/mycore.properties.private" type="javaprop"/>
