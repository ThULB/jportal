##############################################################################
# OAI Clients                                                                #
##############################################################################

## instance independent settings
# the email address of the oai admin
  MCR.OAI.AdmineMail=%MCR.Mail.Address%

# A temporary directory to store the resumption tokens
  MCR.OAI.Resumptiontoken.Dir=%MCR.datadir%/tmp
# the store, where resumption tokens are saved
  MCR.OAI.Resumptiontoken.Store=org.mycore.backend.hibernate.MCRHIBResumptionTokenStore
# timeout, after which the resumption tokens will be deleted (in hours)
  MCR.OAI.Resumptiontoken.Timeout=48

# implementation of the OAI query interface
  MCR.OAI.QueryService=org.mycore.services.oai.MCROAIQueryImpl
# Number of results in the list
  MCR.OAI.MaxReturns=50
# A String not allowed in MCROBJIDs
  MCR.OAI.Separator.Hit=;
# A String not allowed in SPECS and SPECDESCRIPTIONS
  MCR.OAI.Separator.Spec=###

# just the url of friends-providers
# MCR.OAI.Friends=mycoresamplelinux.dl.uni-leipzig.de/servlets/MCROAIDataProvider

# metadata transformer stylesheets: oai_dc is required, others are optional and use as input metadata format oai_dc
  MCR.OAI.Metadata.Transformer.oai_dc=MyCoReOAI-mycore2dc.xsl

# qualified Dublin Core
  MCR.OAI.Metadata.Transformer.oai_qdc=MyCoReOAI-mycore2dcqualified.xsl
  MCR.OAI.Metadata.Namespace.oai_qdc=http://www.mycore.de/xmlns/qdc
  MCR.OAI.Metadata.Schema.oai_qdc=http://www.mycore.de/schema/qdc.xsd
# MCR.OAI.Metadata.Element.oai_qdc=

# xMetaDiss
# MCR.OAI.Metadata.Transformer.xmetadiss=MyCoReOAI-mycore2xMetaDiss.xsl
# MCR.OAI.Metadata.Namespace.xmetadiss=http://www.ddb.de/standards/xMetaDiss/
# MCR.OAI.metadata.schema.xmetadiss=http://www.ddb.de/standards/xmetadiss/xmetadiss.xsd
# MCR.OAI.Metadata.Element.xmetadiss=

# xEpicur
# MCR.OAI.Metadata.Transformer.epicur=MyCoReOAI-mycore2xepicur.xsl
# MCR.OAI.Metadata.Namespace.epicur=urn:nbn:dC:1111-2004033116
# MCR.OAI.metadata.schema.epicur=urn:nbn:dC:1111-2004033116 http://nbn-resolving.de/urn/resolver.pl?urn=urn:nbn:dC:1111-2004033116
# MCR.OAI.Metadata.Element.epicur=

## instance dependent settings for instance OAIProvider
  MCR.OAI.Repository.Identifier.MCROAIProvider=oai.mycore.de
  MCR.OAI.Repository.Name.MCROAIProvider=MyCoRe Repository DocPortal

# a mycore-query condition that is joined with "AND" with the other query (from,until,set)
# you can restrict an instance here to a special document-type or something else
  MCR.OAI.QueryRestriction.OAIProvider=<condition field="objecttype" value="document" operator="=" />

# DINIspec - searchField mapping: ddc = subject, pub-type = type, doc-type=format;
# MCR.OAI.Dini-mapping=

  MCR.OAI.Setscheme.Searchfields.MCROAIProvider=format,type
# MCR.OAI.Setscheme.Searchfields.MCROAIProvider=format,type, subject
  MCR.OAI.Setscheme.Classids.MCROAIProvider.format=DocPortal_class_00000006
  MCR.OAI.Setscheme.Classids.MCROAIProvider.type=DocPortal_class_00000005
# MCR.OAI.Setscheme.Classids.MCROAIProvider.subject=DocPortal_class_00000009

