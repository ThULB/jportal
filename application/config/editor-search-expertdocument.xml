<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE webpage>

<editor id="search-expertdocument">

  <source url="request:servlets/MCRSearchServlet?mode=load&amp;id=[ID]" token="[ID]" />
  <target type="servlet" name="MCRSearchServlet" method="post" format="xml" />

  <components root="root" var="/query">
	  
    <include uri="webapp:editor/imports-common.xml"/>
	  
    <headline anchor="LEFT">
      <text i18n="editor.search.document.labela"/>
    </headline>

    <panel id="root" lines="off">
      <hidden var="@mask" default="editor_form_search-expertdocument.xml" />
      
      <hidden var="conditions/@format" default="xml" />

      <!-- Search only for object type document -->
      <hidden var="conditions/boolean/condition1/@field"    default="objectType" />
      <hidden var="conditions/boolean/condition1/@operator" default="=" />
      <hidden var="conditions/boolean/condition1/@value"    default="document" />

      <!-- Alternatively: search for both object types document or disshab  -->      
      <!-- 
      <hidden var="conditions/boolean/boolean/@operator" default="or" />
      <hidden var="conditions/boolean/boolean/condition/@field"    default="objectType" />
      <hidden var="conditions/boolean/boolean/condition/@operator" default="=" />
      <hidden var="conditions/boolean/boolean/condition/@value"    default="document" />
      <hidden var="conditions/boolean/boolean/condition[2]/@field"    default="objectType" />
      <hidden var="conditions/boolean/boolean/condition[2]/@operator" default="=" />
      <hidden var="conditions/boolean/boolean/condition[2]/@value"    default="disshab" />
      -->
      
      <!-- Search in metadata fields that are text -->
      <cell row="1" col="1" colspan="3" anchor="NORTHWEST" var="conditions/boolean/condition2">
        <repeater min="1" max="10">
          <panel lines="off">
            <cell row="1" col="1" anchor="WEST" var="@field">
              <list type="dropdown" default="title" width="110px">
                <item value="title" i18n="editor.search.document.title" />
                <item value="keywords" i18n="editor.search.document.keyword" />
                <item value="description" i18n="editor.search.document.descript" />
                <item value="source" i18n="editor.search.document.source" />
                <item value="coverage" i18n="editor.search.document.coverage" />
                <item value="rights" i18n="editor.search.document.rights" />
                <item value="relation" i18n="editor.search.document.relation" />
                <item value="allMeta" i18n="editor.search.metadata" />
              </list>
            </cell>
            <cell row="1" col="2" anchor="WEST" var="@operator" ref="list.operators.text" />
            <cell row="1" col="3" anchor="WEST" var="@value">
              <textfield width="40" />
            </cell>
          </panel>
        </repeater>
      </cell>
      
      <!-- Search in metadata fields that are names -->
      <cell row="2" col="1" colspan="3" anchor="NORTHWEST" var="conditions/boolean/condition3">
        <repeater min="1" max="10">
          <panel lines="off">
            <cell row="1" col="1" anchor="WEST" var="@field">
              <list type="dropdown" default="author" width="110px">
                <item value="author" i18n="editor.search.document.author"/>
                <item value="creator" i18n="editor.search.document.creator"/>
                <item value="publisher" i18n="editor.search.document.publisher"/>
                <item value="contributor" i18n="editor.search.document.contrib"/>
              </list>
            </cell>
            <cell row="1" col="2" anchor="WEST" var="@operator">
              <list type="dropdown" default="contains">
                <item value="contains" i18n="editor.search.contains"/>
                <item value="like" i18n="editor.search.like"/>
                <item value="="     label="="     />
                <item value="&gt;"  label="&gt;"  />
                <item value="&gt;=" label="&gt;=" />
                <item value="&lt;"  label="&lt;"  />
                <item value="&lt;=" label="&lt;=" />
              </list>
            </cell>
            <cell row="1" col="3" anchor="WEST" var="@value">
              <textfield width="40" />
            </cell>
          </panel>
        </repeater>
      </cell>
      
      <!-- Search in field "identifier" -->
      <hidden var="conditions/boolean/condition4/@field" default="identifier" />
      <cell row="4" col="1" anchor="SOUTHEAST" height="50px">
        <text i18n="editor.search.document.identifier"/>
      </cell>
      <cell row="4" col="2" anchor="SOUTHWEST" var="conditions/boolean/condition4/@operator" ref="list.operators.identifier" />
      <cell row="4" col="3" width="100%" anchor="SOUTHWEST" var="conditions/boolean/condition4/@value">
        <textfield width="40" />
      </cell>
      
      <!-- Search in field "origin" -->
      <hidden var="conditions/boolean/condition5/@field" default="origin" />
      <hidden var="conditions/boolean/condition5/@operator" default="=" />
      <cell row="5" col="1" anchor="EAST">
        <text i18n="editor.search.document.origin"/>
      </cell>
      <cell row="5" col="2" colspan="2" anchor="WEST" var="conditions/boolean/condition5/@value">
        <list type="dropdown">
          <item value="" i18n="editor.search.choose"/>
          <include cacheable="false" uri="classification:editor[textcounter]:2:children:DocPortal_class_00000003" />
        </list>
      </cell>

      <!-- Search in field "subject" with operator "=" -->
      <hidden var="conditions/boolean/condition6/@field" default="subject" />
      <hidden var="conditions/boolean/condition6/@operator" default="=" />
      <cell row="6" col="1" anchor="EAST">
        <text i18n="editor.search.document.subject"/>
      </cell>
      <cell row="6" col="2" colspan="2" anchor="WEST" var="conditions/boolean/condition6/@value">
        <list type="dropdown">
          <item value="" i18n="editor.search.choose"/>
          <include cacheable="false" uri="classification:editor[textcounter]:2:children:DocPortal_class_00000007" />
        </list>
      </cell>

      <!-- Search in field "format" with operator "=" -->
      <hidden var="conditions/boolean/condition7/@field" default="format" />
      <hidden var="conditions/boolean/condition7/@operator" default="=" />
      <cell row="7" col="1" anchor="EAST">
        <text i18n="editor.search.document.format"/>
      </cell>
      <cell row="7" col="2" colspan="2" anchor="WEST" var="conditions/boolean/condition7/@value">
        <list type="dropdown">
          <item value="" i18n="editor.search.choose"/>
          <include cacheable="false" uri="classification:editor[textcounter]:2:children:DocPortal_class_00000006" />
        </list>
      </cell>

      <!-- Search in field "language" with operator "=" -->
      <hidden var="conditions/boolean/condition8/@field" default="language" />
      <hidden var="conditions/boolean/condition8/@operator" default="=" />
      <cell row="8" col="1" anchor="EAST">
        <text i18n="editor.search.document.lang"/>
      </cell>
      <cell row="8" col="2" colspan="2" anchor="WEST" var="conditions/boolean/condition8/@value">
        <list type="dropdown">
          <item value="" i18n="editor.search.choose"/>
          <include cacheable="false" uri="classification:editor[textcounter]:2:children:DocPortal_class_00000004" />
        </list>
      </cell>

      <!-- Search in field "type" with operator "=" -->
      <hidden var="conditions/boolean/condition9/@field" default="type" />
      <hidden var="conditions/boolean/condition9/@operator" default="=" />
      <cell row="9" col="1" anchor="EAST">
        <text i18n="editor.search.document.type"/>
      </cell>
      <cell row="9" col="2" colspan="2" anchor="WEST" var="conditions/boolean/condition9/@value">
        <list type="dropdown">
          <item value="" i18n="editor.search.choose"/>
          <include cacheable="false" uri="classification:editor[textcounter]:2:children:DocPortal_class_00000005" />
        </list>
      </cell>
       
       <!-- Search in field "dateCreated" -->
      <hidden var="conditions/boolean/condition10/@field" default="dateCreated" />
      <cell row="10" col="1" anchor="EAST">
        <text i18n="editor.search.document.datecr" />
      </cell>
	    <cell row="10" col="2" colspan="2" anchor="WEST">
	      <panel lines="off">  
          <cell row="1" col="1" anchor="WEST" var="conditions/boolean/condition10/@operator" ref="list.operators" />
          <cell row="1" col="2" anchor="WEST" var="conditions/boolean/condition10/@value">
            <textfield width="15" />
          </cell>
        </panel>
      </cell>

      <cell row="11" col="1" colspan="3" anchor="SOUTHWEST" height="50px">
        <text i18n="editor.search.document.filecont" />
      </cell>

      <!-- Search in field "content" -->
      <hidden var="conditions/boolean/condition11/@field" default="content" />
      <cell row="12" col="1" anchor="EAST">
        <text i18n="editor.search.fulltext" />
      </cell>
	    <cell row="12" col="2" anchor="WEST" var="conditions/boolean/condition11/@operator" ref="list.operators.text" />
      <cell row="12" col="3" anchor="WEST" var="conditions/boolean/condition11/@value">
        <textfield width="15" />
      </cell>

      <!-- Search in field "fileName" -->
      <hidden var="conditions/boolean/condition12/@field" default="fileName" />
      <cell row="13" col="1" anchor="EAST">
        <text i18n="editor.search.document.filename" />
      </cell>
	    <cell row="13" col="2" anchor="WEST" var="conditions/boolean/condition12/@operator" ref="list.operators.identifier" />
      <cell row="13" col="3" anchor="WEST" var="conditions/boolean/condition12/@value">
        <textfield width="40" />
      </cell>

      <!-- Search in field "fileSize" -->
      <hidden var="conditions/boolean/condition13/@field" default="fileSize" />
      <cell row="14" col="1" anchor="EAST">
        <text i18n="editor.search.document.filesize" />
      </cell>
	    <cell row="14" col="2" anchor="WEST" var="conditions/boolean/condition13/@operator" ref="list.operators" />
      <cell row="14" col="3" anchor="WEST" var="conditions/boolean/condition13/@value">
        <textfield width="15" />
      </cell>

      <!-- Search in field "fileExtension" -->
      <hidden var="conditions/boolean/condition14/@field" default="fileExtension" />
      <cell row="15" col="1" anchor="EAST">
        <text i18n="editor.search.document.extension" />
      </cell>
	    <cell row="15" col="2" anchor="WEST" var="conditions/boolean/condition14/@operator" ref="list.operators.identifier" />
      <cell row="15" col="3" anchor="WEST" var="conditions/boolean/condition14/@value">
        <textfield width="10" />
      </cell>

      <!-- Search in field "fileDateModified" -->
      <hidden var="conditions/boolean/condition15/@field" default="fileDateModified" />
      <cell row="16" col="1" anchor="EAST">
        <text i18n="editor.search.document.datemod" />
      </cell>
	    <cell row="16" col="2" anchor="WEST" var="conditions/boolean/condition15/@operator" ref="list.operators" />
      <cell row="16" col="3" anchor="WEST" var="conditions/boolean/condition15/@value">
        <textfield width="15" />
      </cell>

      <!-- Select hosts to query -->
      <cell row="17" col="1" anchor="SOUTHEAST" height="50px">
        <text i18n="editor.search.searchon"/>
      </cell>
      <cell row="17" col="2" colspan="2" anchor="SOUTHWEST" var="hosts/@target">
        <list type="radio" default="local">
          <item value="local" i18n="editor.search.searchthis"/>
          <item value="all" i18n="editor.search.searchall"/>
          <item value="selected" i18n="editor.search.searchboth"/>
        </list>
      </cell>
      
      <cell row="18" col="2" colspan="2" anchor="NORTHWEST" var="hosts/host">
        <list type="checkbox" cols="2">
          <include uri="request:hosts.xml" />
        </list>
      </cell>
      
      <cell row="19" col="1" anchor="NORTHEAST">
        <text i18n="editor.search.sortby" />
      </cell>
      <cell row="19" col="2" colspan="2" anchor="NORTHWEST" var="sortBy/field">
        <repeater min="1" max="3">
          <panel lines="off">
            <cell row="1" col="1" anchor="WEST" var="@name">
              <list type="dropdown">
                <item value="" i18n="editor.search.choose" />
                <item value="title" i18n="editor.search.document.title" />
                <item value="author" i18n="editor.search.document.author" />
                <item value="dateCreated" i18n="editor.search.document.datecr" />
              </list>
            </cell>
            <cell row="1" col="2" anchor="WEST" var="@order">
              <list type="dropdown" default="ascending">
                <item value="ascending" i18n="editor.search.ascending" />
                <item value="descending" i18n="editor.search.descending" />
              </list>
            </cell>
          </panel>
        </repeater>
      </cell>

      <cell row="20" col="1" colspan="3" anchor="SOUTHEAST">
        <panel lines="off">
          <cell row="1" col="1" anchor="WEST">
            <text i18n="editor.search.connect" />
          </cell>
          <cell row="1" col="2" anchor="WEST" var="conditions/boolean/@operator">
            <list type="dropdown" default="and">
              <item value="and" i18n="editor.search.and" />
              <item value="or" i18n="editor.search.or" />
            </list>
          </cell>
        </panel>
      </cell>

      <cell row="21" col="1" colspan="3" anchor="EAST">
        <panel lines="off">
          <cell row="1" col="1" anchor="WEST">
            <text i18n="editor.search.max" />
          </cell>
          <cell row="1" col="2" anchor="WEST" var="@maxResults">
            <list type="dropdown" default="100">
              <item value="20"  label="20"  />
              <item value="100" label="100" />
              <item value="500" label="500" />            
              <item value="0"   i18n="editor.search.all" />
            </list>
          </cell>
          <cell row="1" col="3" anchor="WEST">
            <text i18n="editor.search.label" />
          </cell>
          <cell row="1" col="4" anchor="WEST" var="@numPerPage">
            <list type="dropdown" default="10">
              <item value="10" label="10" />
              <item value="20" label="20" />
              <item value="50" label="50" />
              <item value="0"  i18n="editor.search.all" />
            </list>
          </cell>
          <cell row="1" col="5" anchor="WEST">
            <text i18n="editor.search.perpage" />
          </cell>
        </panel>
      </cell>
      
      <cell row="22" col="1" colspan="3" anchor="EAST">
        <submitButton i18n="editor.search.search" width="150px" />
      </cell>
    </panel>
    
    <list type="dropdown" id="list.operators.text" default="contains">
      <item value="contains" i18n="editor.search.contains" />
      <item value="like" i18n="editor.search.like" />
      <item value="phrase" i18n="editor.search.phrase"/>
      <item value="="     label="="     />
      <item value="&gt;"  label="&gt;"  />
      <item value="&gt;=" label="&gt;=" />
      <item value="&lt;"  label="&lt;"  />
      <item value="&lt;=" label="&lt;=" />
    </list>

    <list type="dropdown" id="list.operators.identifier" default="like">
      <item value="like" i18n="editor.search.like"/>
      <item value="="     label="="     />
      <item value="&gt;"  label="&gt;"  />
      <item value="&gt;=" label="&gt;=" />
      <item value="&lt;"  label="&lt;"  />
      <item value="&lt;=" label="&lt;=" />
    </list>

    <list type="dropdown" id="list.operators" default="=">
      <item value="="     label="="     />
      <item value="&gt;"  label="&gt;"  />
      <item value="&gt;=" label="&gt;=" />
      <item value="&lt;"  label="&lt;"  />
      <item value="&lt;=" label="&lt;=" />
    </list>

  </components>

</editor>
