<?xml version="1.0" encoding="ISO-8859-1"?>
<imports>
    <include uri="webapp:editor/imports-jpcommon.xml" />
    <include uri="webapp:editor/imports-jplabelsHelptexts.xml" />
    s
    <panel id="edit-jpinst" lines="on">
        <hidden var="ID" />
        <hidden var="label" />
        <hidden var="metadata/@lang" default="de" />
        <hidden var="service/servdates" descendants="true" />
        <hidden var="service/servacls" descendants="true" />
        <hidden var="service/servflags" descendants="true" />

        <!-- ########################## names ################################## -->
        <cell anchor="WEST" colspan="4" col="1" row="1" class="editorHeadlines">
            <text>
                <label i18n="metaData.headlines.jpinst.names" />
            </text>
        </cell>
        <!--full name -->
        <cell col="1" row="10" anchor="NORTHWEST" class="editorMandatory" ref="AINameName" />
        <cell col="2" row="10" anchor="NORTHWEST" ref="DFullName" />
        <cell col="3" row="10" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- nickname -->
        <cell col="1" row="13" anchor="NORTHWEST" class="editorLabel" ref="AINameNick" />
        <cell col="2" row="13" anchor="NORTHWEST" ref="DNickName" />
        <cell col="3" row="13" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- nickname -->
        <cell col="1" row="16" anchor="NORTHWEST" class="editorLabel" ref="AINameProp" />
        <cell col="2" row="16" anchor="NORTHWEST" ref="DPropName" />
        <cell col="3" row="16" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!--alternatives -->
        <cell col="1" row="18" anchor="NORTHWEST" class="editorLabel">
            <text i18n="jp.editor.inst.alternativeName" />
        </cell>
        <cell col="2" row="18" anchor="NORTHWEST" ref="Dalternative" />
        <cell col="3" row="18" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>

        <!-- ########################## address ################################## -->
        <cell anchor="WEST" colspan="20" col="1" row="20" class="editorHeadlines">
            <text>
                <label i18n="metaData.headlines.jpinst.address" />
            </text>
        </cell>
        <!-- country -->
        <cell col="1" row="21" anchor="NORTHWEST" class="editorLabel" ref="AAddressCountry" />
        <cell col="2" row="21" anchor="NORTHWEST" ref="DAddressCountry" />
        <cell col="3" row="21" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- zip code -->
        <cell col="1" row="22" anchor="NORTHWEST" class="editorLabel" ref="AAddressZIP" />
        <cell col="2" row="22" anchor="NORTHWEST" ref="DAddressZipCode" />
        <cell col="3" row="22" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- city -->
        <cell col="1" row="24" anchor="NORTHWEST" class="editorLabel" ref="AAddressCity" />
        <cell col="2" row="24" anchor="NORTHWEST" ref="DAddressCity" />
        <cell col="3" row="24" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- street -->
        <cell col="1" row="26" anchor="NORTHWEST" class="editorLabel" ref="AAddressStreet" />
        <cell col="2" row="26" anchor="NORTHWEST" ref="DAddressStreet" />
        <cell col="3" row="26" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- number -->
        <cell col="1" row="28" anchor="NORTHWEST" class="editorLabel" ref="AAddressNumber" />
        <cell col="2" row="28" anchor="NORTHWEST" ref="DAddressNumber" />
        <cell col="3" row="28" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>

        <!-- ########################## contact ################################## -->
        <cell anchor="WEST" colspan="20" col="1" row="30" class="editorHeadlines">
            <text>
                <label i18n="metaData.headlines.jpinst.contact" />
            </text>
        </cell>
        <!-- phone -->
        <cell col="1" row="35" anchor="NORTHWEST" ref="LPhone" class="editorLabel" />
        <cell col="2" row="35" anchor="NORTHWEST" ref="DPhone" />
        <cell col="3" row="35" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!--URL -->
        <cell col="1" row="40" anchor="NORTHWEST" ref="LURL" class="editorLabel" />
        <cell col="2" row="40" anchor="NORTHWEST" ref="DURL" />
        <cell col="3" row="40" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!--email -->
        <cell col="1" row="50" anchor="NORTHWEST" ref="LEmail" class="editorLabel" />
        <cell col="2" row="50" anchor="NORTHWEST" ref="DEmail" />
        <cell col="3" row="50" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- ########################## misc ################################## -->
        <cell anchor="WEST" colspan="20" col="1" row="60" class="editorHeadlines">
            <text>
                <label i18n="metaData.headlines.jpinst.misc" />
            </text>
        </cell>
        <!-- note -->
        <cell col="1" row="65" anchor="NORTHWEST" ref="LNote" class="editorLabel" />
        <cell col="2" row="65" anchor="NORTHWEST" ref="DNote" />
        <cell col="3" row="65" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- identifier -->
        <cell col="1" row="75" anchor="NORTHWEST" ref="Lidentifier" class="editorLabel" />
        <cell col="2" row="75" anchor="NORTHWEST" ref="Didentifier" />
        <cell col="3" row="75" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- doublet of -->
        <cell col="1" row="79" anchor="NORTHWEST" ref="LLogos" class="editorLabel" />
        <cell col="2" row="79" anchor="NORTHWEST" ref="DLogos" />
        <cell col="3" row="79" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>
        <!-- doublet of -->
        <cell col="1" row="80" anchor="NORTHWEST" ref="LdoubletOf" class="editorLabel" />
        <cell col="2" row="80" anchor="NORTHWEST" ref="DdoubletOf" />
        <cell col="3" row="80" anchor="NORTHWEST">
            <space width="20" height="0" />
        </cell>

        <!-- save / cancel button -->
        <cell col="1" row="190">
            <br />
        </cell>
        <cell row="191" col="1" anchor="WEST" ref="save" colspan="4" class="editorButtons"/>
    </panel>
    <!-- ========================================================================================================================= -->
    <panel id="DFullName">
        <hidden var="metadata/names/@class" default="MCRMetaInstitutionName" />
        <hidden var="metadata/names/@notinherit" default="false" />
        <hidden var="metadata/names/@heritable" default="true" />
        <hidden var="metadata/names/name/@inherited" default="0" />
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/names/name/fullname" ordernr="1" />
    </panel>
    <panel id="DNickName">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/nickname" ordernr="1" />
    </panel>
    <panel id="DPropName">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile32" var="metadata/names/name/property" ordernr="1" />
    </panel>
    <panel id="Dalternative">
        <hidden var="metadata/alternatives/@class" default="MCRMetaXML" />
        <hidden var="metadata/alternatives/@notinherit" default="true" />
        <hidden var="metadata/alternatives/@heritable" default="true" />
        <cell col="1" row="1" anchor="NORTHWEST" var="metadata/alternatives/alternative">
            <repeater min="0" max="1024">
                <panel>
                    <cell col="1" row="2" var="name">
                        <textfield width="35" maxlength="128" />
                    </cell>
                </panel>
            </repeater>
        </cell>
    </panel>
    <text id="Lalternative" i18n="jp.editor.inst.alternativeName" />

    <!-- ========================================================================================================================= -->
    <panel id="DAddressCountry">
        <hidden var="metadata/addresses/@class" default="MCRMetaAddress" />
        <hidden var="metadata/addresses/@notinherit" default="false" />
        <hidden var="metadata/addresses/@heritable" default="true" />
        <hidden var="metadata/addresses/address/@inherited" default="0" />
        <cell col="1" row="1" anchor="NORTHWEST" var="metadata/addresses/address/country" ref="TFzeile128" ordernr="2" />
    </panel>
    <panel id="DAddressZipCode">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile10" var="metadata/addresses/address/zipcode" ordernr="2" />
    </panel>
    <panel id="DAddressCity">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/addresses/address/city" ordernr="2" />
    </panel>
    <panel id="DAddressStreet">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/addresses/address/street" ordernr="2" />
    </panel>
    <panel id="DAddressNumber">
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile10" var="metadata/addresses/address/number" ordernr="2" />
    </panel>

    <!-- ========================================================================================================================= -->
    <panel id="DPhone">
        <hidden var="metadata/phones/@class" default="MCRMetaLangText" />
        <hidden var="metadata/phones/@notinherit" default="false" />
        <hidden var="metadata/phones/@heritable" default="true" />
        <cell col="1" row="1" anchor="NORTHWEST" var="metadata/phones/phone">
            <repeater min="1" max="5" ref="DPhoneRef" />
        </cell>
    </panel>
    <panel id="DPhoneRef">
        <hidden var="@inherited" default="0" />
        <hidden var="@lang" default="de" />
        <cell col="1" row="1" anchor="NORTHWEST" ref="Sphone" var="@type" sortnr="3" />
        <cell col="1" row="2" anchor="NORTHWEST" ref="TFzeile128" sortnr="3" />
    </panel>
    <panel id="DURL">
        <hidden var="metadata/urls/@class" default="MCRMetaLink" />
        <hidden var="metadata/urls/@notinherit" default="false" />
        <hidden var="metadata/urls/@heritable" default="true" />
        <hidden var="metadata/urls/url/@inherited" default="0" />
        <hidden var="metadata/urls/url/@type" default="locator" />
        <cell col="1" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@xlink:title" ordernr="4" />
        <cell col="2" row="1" anchor="NORTHWEST" ref="AURLTitle" />
        <cell col="1" row="2" anchor="NORTHWEST" ref="TFzeile128" var="metadata/urls/url/@xlink:href" ordernr="4" />
        <cell col="2" row="2" anchor="NORTHWEST" ref="AURLReference" />
    </panel>
    <panel id="DEmail">
        <hidden var="metadata/emails/@class" default="MCRMetaLangText" />
        <hidden var="metadata/emails/@notinherit" default="false" />
        <hidden var="metadata/emails/@heritable" default="true" />
        <hidden var="metadata/emails/email/@inherited" default="0" />
        <cell col="2" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/emails/email" ordernr="5" />
    </panel>
    <!-- ========================================================================================================================= -->
    <panel id="DNote">
        <hidden var="metadata/notes/@class" default="MCRMetaLangText" />
        <hidden var="metadata/notes/@notinherit" default="false" />
        <hidden var="metadata/notes/@heritable" default="true" />
        <hidden var="metadata/notes/note/@inherited" default="0" />
        <cell col="2" row="1" anchor="NORTHWEST" ref="TFarea4096" var="metadata/notes/note" ordernr="6" default="" />
    </panel>
    <!-- *** Identifier ** -->
    <panel id="Didentifier">
        <hidden var="metadata/identifiers/@class" default="MCRMetaLangText" />
        <hidden var="metadata/identifiers/@notinherit" default="false" />
        <hidden var="metadata/identifiers/@heritable" default="true" />
        <cell col="1" row="1" anchor="NORTHWEST" var="metadata/identifiers/identifier">
            <repeater min="0" max="10" anchor="NORTHWEST">
                <panel>
                    <hidden var="@inherited" default="0" />
                    <cell anchor="WEST" col="1" row="1" var="@type">
                        <list type="dropdown">
                            <item value="gnd" i18n="metaData.person.gnd" />
                            <item value="pnd" i18n="metaData.person.pnd" />
                            <item value="ppn" i18n="metaData.person.ppn" />
                        </list>
                    </cell>
                    <cell anchor="WEST" col="1" row="2">
                        <textfield width="35" maxlength="128" />
                    </cell>
                </panel>
            </repeater>
        </cell>
    </panel>

    <!-- Logos -->
    <text id="LLogos" i18n="editormask.labels.LLogos" />
    <panel id="DLogos">
        <hidden var="metadata/logo/@class" default="MCRMetaLangText" />
        <hidden var="metadata/logo/@notinherit" default="false" />
        <hidden var="metadata/logo/@heritable" default="true" />
        <cell col="2" row="1" anchor="NORTHWEST" var="metadata/logo/url">
            <repeater min="0" max="10" anchor="NORTHWEST">
                <panel>
                    <hidden var="@inherited" default="0" />
                    <cell anchor="WEST" col="1" row="1" var="@type">
                        <list type="dropdown">
                            <item value="logoPlain">
                                <label xml:lang="de">Einfaches Logo</label>
                            </item>
                            <item value="logoPlusText">
                                <label xml:lang="de">Logo mit Text</label>
                            </item>
                        </list>
                    </cell>
                    <cell anchor="WEST" col="1" row="2">
                        <textfield width="35" maxlength="128" />
                    </cell>
                </panel>
            </repeater>
        </cell>
    </panel>

    <!-- doubletOf -->
    <text id="LdoubletOf" i18n="editormask.labels.LdoubletOf" />
    <panel id="DdoubletOf">
        <hidden var="metadata/def.doubletOf/@class" default="MCRMetaLangText" />
        <hidden var="metadata/def.doubletOf/@notinherit" default="false" />
        <hidden var="metadata/def.doubletOf/@heritable" default="true" />
        <hidden var="metadata/def.doubletOf/note/@inherited" default="0" />
        <cell col="2" row="1" anchor="NORTHWEST" ref="TFzeile128" var="metadata/def.doubletOf/doubletOf" />
    </panel>

</imports>
