<?xml version="1.0" encoding="UTF-8"?>
<imports>
    <!-- *** Text fields *** -->
    <textfield id="TFzeile10" width="10" maxlength="10" />
    <textfield id="TFzeile32" width="32" maxlength="32" />
    <textfield id="TFzeile64" width="48" maxlength="64" />
    <textfield id="TFzeile128" width="64" maxlength="128" />
    <textfield id="TFzeile1024" width="64" maxlength="1024" />
    <!-- *** Text area *** -->
    <textarea id="TFarea4096" width="62" height="6" maxlength="4096" />
    <!-- *** author_input_repeater_type List *** -->
    <list id="participants_input_repeater_type" type="dropdown">
        <include uri="classification:editor:-1:children:jportal_class_00000007" />
    </list>
    <list id="subtitle_type" width="120" type="dropdown">
        <include uri="classification:editor:-1:children:jportal_class_00000006" />
    </list>
    <list id="identi_type" width="120" type="dropdown">
        <include uri="classification:editor:-1:children:jportal_class_00000010" />
    </list>
    <list id="note_type" width="120" type="dropdown">
        <include uri="classification:editor:-1:children:jportal_class_00000060" />
    </list>
    <list id="tradition_type" width="120" type="dropdown">
        <include uri="classification:editor:-1:children:jportal_class_00000080" />
    </list>
    <panel id="righstManag_access_input">
        <hidden var="service/servflags/servflag/@inherited" default="0" />
        <hidden var="service/servflags/servflag" default="Access:public" />
    </panel>
    <panel id="righstManag_state_input">
        <hidden var="service/servflags/servflag[2]/@inherited" default="0" />
        <hidden var="service/servflags/servflag[2]" default="State:commited" />
    </panel>
    <panel id="righstManag_ip_input">
        <hidden var="service/servflags/servflag[3]/@inherited" default="0" />
        <hidden var="service/servflags/servflag[3]" default="IP:" />
    </panel>
    <!-- parent ================================================================== -->
    <panel id="parent_input_hided">
        <hidden var="structure/parents/@class" default="MCRMetaLinkID" />
<!--        <hidden var="structure/parents/@notinherit" default="false" />-->
        <hidden var="structure/parents/@heritable" default="true" />
        <hidden var="structure/parents/parent/@inherited" default="0" />
        <hidden var="structure/parents/parent/@xlink:type" default="locator" />
        <hidden var="structure/parents/parent/@xlink:title" />
        <hidden var="structure/parents/parent/@xlink:href"/>
        <!-- 
        <cell col="1" row="1" anchor="NORTHWEST" var="structure/parents/parent/@xlink:href">
          <textfield id="tf.parent" width="32" maxlength="32">
            <condition id="cond.parent.required" required="true">
              <label xml:lang="de">Bitte geben Sie eine valide MyCoRe ID an!</label>
              <label xml:lang="en">Please enter a valid MyCoRe ID!</label>
            </condition>
          </textfield>
        </cell>
         -->
    </panel>
    <!-- save ================================================================== -->
    <panel id="save">
        <cell row="1" col="1" anchor="WEST">
            <cancelButton id="BCancel" width="100px" i18n="editormask.common.BCancel" />
        </cell>
        <cell row="1" col="2" anchor="WEST" var="save">
            <submitButton id="BSubmit" width="100px" i18n="editormask.common.BSubmit" />
        </cell>
    </panel>
    <!--get person / institution list ======================================================-->
    <panel id="getPersonAndInst">
        <!-- <cell row="1" col="1" colspan="2" anchor="NORTHWEST" ref="personInst_label" /> -->
        <cell anchor="NORTHWEST" row="1" col="1" colspan="2" width="100%">
            <output var="@xlink:title" />
            <text label=" (" />
            <output var="@xlink:href" />
            <text label=")" />
        </cell>
        <cell anchor="NORTHWEST" row="2" col="1">
            <subselect id="sub.select1" type="webpage" href="indexpage?searchclass=jpperson_sub&amp;mode=prefix&amp;init=true" i18n="editormask.common.sub.select1" />
        </cell>
        <cell anchor="NORTHWEST" row="2" col="2">
            <subselect id="sub.select2" type="webpage" href="indexpage?searchclass=jpinst_sub&amp;mode=prefix&amp;init=true" i18n="editormask.common.sub.select2" />
        </cell>
        <cell anchor="NORTHWEST" row="2" col="2">
            <subselect id="sub.select3" type="webpage" href="jp-subselect.xml?XSL.subselect.type=person" i18n="editormask.common.sub.select3" />
        </cell>
    </panel>

    <!-- *** Derivate linking -->
    <panel id="derivateLink_input" >
      <hidden var="metadata/derivateLinks/@class" default="MCRMetaDerivateLink" sortnr="3" />
      <hidden var="metadata/derivateLinks/@notinherit" default="true" />
      <hidden var="metadata/derivateLinks/@heritable" default="false" />
      <cell col="1" row="1" anchor="NORTHWEST" var="metadata/derivateLinks/derivateLink" sortnr="3">
        <repeater min="1" max="50" anchor="NORTHWEST">
          <panel lines="off">
            <hidden var="@inherited" default="0" />
            <hidden var="@xlink:type" default="locator" />
            <hidden var="@xlink:label" />
            <hidden var="@xlink:href" />
            <cell>
              <output var="@xlink:href" default="" />
            </cell>
            <cell row="1" col="2">
              <subselect id="sub.derivate" type="servlet" href="servlets/MCRDerivateLinkServlet" i18n="editormask.common.sub.derivate" />
            </cell>
          </panel>
        </repeater>
      </cell>
    </panel>

    <!-- participants ================================================================== -->
    <panel id="participants_input">
        <hidden var="metadata/participants/@class" default="MCRMetaLinkID" sortnr="3" />
        <cell col="1" row="1" anchor="NORTHWEST" var="metadata/participants/participant" sortnr="3">
            <repeater min="1" max="50" anchor="NORTHWEST">
                <panel lines="off">
                    <hidden var="@inherited" default="0" />
                    <hidden var="@xlink:type" default="locator" />
                    <hidden var="@xlink:label" />
                    <hidden var="@xlink:href" />
                    <hidden var="@xlink:title" />
                    <cell row="1" col="1" anchor="NORTHWEST" ref="participants_input_repeater_type" var="@type" />
                    <cell row="2" col="1" anchor="NORTHWEST" ref="getPersonAndInst" />
                </panel>
            </repeater>
        </cell>
    </panel>
    <!-- jpjournalID_hidden ================================================================== -->
    <panel id="jpjournalID_input_hidden">
        <hidden var="metadata/hidden_jpjournalsID/@class" default="MCRMetaLangText" />
        <hidden var="metadata/hidden_jpjournalsID/@heritable" default="true" />
        <hidden var="metadata/hidden_jpjournalsID/hidden_jpjournalID" />
    </panel>
</imports>