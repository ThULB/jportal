<?xml version="1.0" encoding="ISO-8859-1"?>
<imports>
	<include uri="webapp:editor/imports-jpcommon.xml" />
	<include uri="webapp:editor/imports-jplabelsHelptexts.xml" />
	<panel id="edit-jpclassi" lines="on">
		<hidden var="ID" />
		<hidden var="label" />
		<hidden var="metadata/@lang" default="de" />
		<hidden var="service/servdates" descendants="true" />
		<hidden var="service/servacls" descendants="true" />
		<hidden var="service/servflags" descendants="true" />
		<hidden var="metadata/derivateLinks" descendants="true" />

		<!-- ########################## formal description ################################## -->
		<!-- Title bar -->
		<cell anchor="WEST" colspan="4" col="1" row="1" class="editorHeadlines">
			<text>
				<label i18n="component.classhandler.headline.modcateg" />
			</text>
		</cell>
		<!-- subtitle -->
		<cell row="20" col="2" anchor="NORTHWEST" ref="label_input" />

		<!-- panel definitions -->

		<!-- Label ================================================================== -->
		<panel id="label_input">
			<hidden var="metadata/label/@class" default="MCRMetaXML" />
			<hidden var="metadata/label/@heritable" default="false" />
			<cell col="1" row="1" anchor="NORTHWEST" var="metadata/label">
				<repeater min="0" max="20" anchor="NORTHWEST" ref="label_input_repeater" />
			</cell>
		</panel>
		<panel id="label_input_repeater">
			<cell class="editorLabel" col="1" row="1" anchor="NORTHWEST">
				<text i18n="component.classhandler.label.lang" />
			</cell>
			<cell col="2" row="1" anchor="NORTHWEST" ref="Slang" var="@xml:lang" default="de" />
			<cell class="editorLabel" col="1" row="2" anchor="NORTHWEST">
				<text i18n="component.classhandler.label.text.p" />
			</cell>
			<cell col="2" row="2" anchor="NORTHWEST" var="text">
				<textfield width="50" maxlength="1024" />
			</cell>
			<cell class="editorLabel" col="1" row="3" anchor="NORTHWEST">
				<text i18n="component.classhandler.label.description" />
			</cell>
			<cell col="2" row="3" anchor="NORTHWEST" var="description">
				<textfield width="50" maxlength="1024" />
			</cell>
		</panel>
		<!-- end: Label -->
		<list id="Slang" width="60" type="dropdown" default="de">
			<item value="de" i18n="component.classhandler.list.slang.de" />
			<item value="en" i18n="component.classhandler.list.slang.en" />
		</list>
		<!-- ================================================================================================= -->
		<cell col="1" row="300">
			<br />
			<br />
		</cell>
		<cell row="300" col="2" anchor="EAST" ref="save" />
	</panel>
</imports>