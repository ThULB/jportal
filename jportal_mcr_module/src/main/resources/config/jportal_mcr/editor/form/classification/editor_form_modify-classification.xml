<MyCoReWebPage>

  <section title="Ã„ndern der Klassifikationsbeschreibung "
    xml:lang="de">
  </section>

  <section title="Update a category for the given classification"
    xml:lang="en">
  </section>

  <section xml:lang="all">
    <editor id="modify-classification">
      <source uri="{sourceUri}" />
      <target type="servlet" name="MCRStartClassEditorServlet"
        method="post" format="xml" />
      <cancel url="{cancelUrl}" />

      <components root="modify-classification" var="/mycoreclass"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

        <include uri="webapp:editor/imports-common-classhandler.xml" />

        <headline anchor="CENTER">
          <text i18n="component.classhandler.headline.modclass" />
        </headline>

        <panel id="modify-classification">
          <cell col="1" row="1" anchor="NORTHWEST" ref="ModifyClass" />
          <cell col="1" row="2" anchor="NORTHWEST">
            <space width="1px" height="10px" />
          </cell>
          <cell col="1" row="3" anchor="EAST" ref="TwoButtons" />
          <cell col="1" row="4" anchor="NORTHWEST">
            <space width="1px" height="10px" />
          </cell>
        </panel>

        <panel id="ModifyClass">
          <hidden var="@ID" />
          <cell col="1" row="1" colspan="2" anchor="NORTHWEST" ref="AClid" />
          <cell col="1" row="2" anchor="NORTHWEST">
            <text i18n="component.classhandler.label.id.p" class="editorlabel" />
          </cell>
          <cell col="2" row="2" anchor="NORTHWEST">
            <output var="@ID" />
          </cell>

          <cell col="1" row="3" anchor="NORTHWEST">
            <text i18n="component.classhandler.label.label.p"
              class="editorlabel" />
          </cell>
          <cell col="2" row="3" var="label" anchor="NORTHWEST">
            <repeater min="1" max="10" ref="RLabel" />
          </cell>
        </panel>

        <text id="AClid" i18n="component.classhandler.label.modclass.aclid"
          class="editorlabel" />
        <!-- *** End *** -->

      </components>
    </editor>
  </section>
</MyCoReWebPage>


