<?xml version="1.0" encoding="UTF-8"?>
<mcrpermissions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="MCRPermissions.xsd"
    xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xml="http://www.w3.org/XML/1998/namespace">
    <mcrpermission name="manage-readaccess-website" description="Right to manage read access of Website by Module-WCMS" ruledescription="For administrators only">
        <condition format="xml">
            <boolean operator="or">
                <condition value="admin" operator="=" field="group" />
            </boolean>
        </condition>
    </mcrpermission>
    <mcrpermission name="manage-wcmsaccess" description="Right to manage access for Module-WCMS by Module-WCMS" ruledescription="For administrators only">
        <condition format="xml">
            <boolean operator="or">
                <condition value="admin" operator="=" field="group" />
            </boolean>
        </condition>
    </mcrpermission>
</mcrpermissions>
